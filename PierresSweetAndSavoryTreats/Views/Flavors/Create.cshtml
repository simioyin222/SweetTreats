@{
  Layout = "_Layout";
}

@using PierresSweetAndSavoryTreats.Models
@model PierresSweetAndSavoryTreats.Models.Flavor

<div class="main">
    <p>Complete the form to add a flavor name to the database.</p>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <input type="submit" value="Create Flavor Name" class="btn btn-primary" />
    </form>
</div>

<hr/>
