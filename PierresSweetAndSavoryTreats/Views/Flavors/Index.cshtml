@{
  Layout = "_Layout";
}

@using PierresSweetAndSavoryTreats.Models;
@model List<PierresSweetAndSavoryTreats.Models.Flavor>;
  
<div class="subheader bg">
  <h4>
    Pierre's Flavors
  </h4>
</div>
<br/>

<div class="main">
  @if(@Model.Count == 0)
  {
    <p>There are currently no flavor names in the database.</p>
  }
  else
  {
    <ul>
      @foreach(Flavor entry in Model)
      {
        <li>@Html.ActionLink($"{entry.Name}", "Details", new { id = entry.FlavorId })</li>
      }
    </ul>
  }
</div>
<hr/>
<p>@Html.ActionLink("Add a Flavor Name", "Create")</p>