@{
  Layout = "_Layout";
}

@using System.Collections.Generic;
@using PierresSweetAndSavoryTreats.Models;
@model List<PierresSweetAndSavoryTreats.Models.Treat>;

<div class="subheader bg">
  <h4>Pierre's Treats</h4>
</div>
<br/>

<div class="main">
  @if(@Model.Count == 0)
  {
    <p>No treats are currently in the database.</p>
  }
  else
  {
    <ul>
      @foreach(Treat entry in Model)
      {
        <li>@Html.ActionLink($"{entry.Name}", "Details", new { id = entry.TreatId }) </li>
      }
    </ul>
  }
</div>
<hr/>
<p>@Html.ActionLink("Add a Treat", "Create")</p>