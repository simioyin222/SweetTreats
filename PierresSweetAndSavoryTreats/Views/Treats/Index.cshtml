@{
  Layout = "_Layout";
}

@using System.Collections.Generic;
@using PierresSweetAndSavoryTreats.Models;
@model List<PierresSweetAndSavoryTreats.Models.Treat>;

<div class="subheader bg">
  <h4>Pierre's Treats</h4>
</div>
<br/>

<div class="container col-8">
  <div class="card">
    <div class="card-header">
      <h5>Treats</h5>
      @if(User.Identity.IsAuthenticated)
      {
        @Html.ActionLink("Add New Treat", "Create")
      }
    </div>
    <div class="card-body">
      @if(Model.Count == 0)
      {
        <p>OUT OF STOCK.</p>
      }
      else
      {
        <ul>
          @foreach(Treat treat in Model)
          {
            @Html.ActionLink("Add New Treat", "Create", "Treats", null, new { @class = "btn btn-primary" })
          }
        </ul>
      }
    </div>
  </div>
</div>